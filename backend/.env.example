# Environment variables for backend application settings
PORT=3000

# Environment variables for PostgreSQL configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=example-auth
#DATABASE_URL=postgresql://postgres:postgres@postgres:5432/example-auth

# Environment variables for frontend and backend URLs
FRONTEND_URL=http://localhost:5173
BACKEND_URL=http://localhost:3000/api
CORS_ORIGIN=http://localhost:5173

# Environment variables for JWT configuration
JWT_ACCESS_TOKEN_SECRET=
JWT_ACCESS_TOKEN_EXPIRATION_TIME=3600s # 1 hour
JWT_REFRESH_TOKEN_SECRET=
JWT_REFRESH_TOKEN_EXPIRATION_TIME=7d # 7 days

GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:3000/api/auth/google/callback

# Facebook OAuth configuration
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
FACEBOOK_CALLBACK_URL=http://localhost:3000/api/auth/facebook/callback

# Email service configuration
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=your_email_user
EMAIL_PASSWORD=your_email_password
EMAIL_FROM=no-reply@example.com

# File upload configuration
UPLOAD_DIR=uploads
UPLOAD_MAX_FILE_SIZE=1048576 # bytes
